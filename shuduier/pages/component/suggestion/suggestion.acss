.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.area{
  height:400rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 8rpx #ededed;
}
.section{
  width:686rpx;
  margin-top:32rpx;
}
.btn{
  width: 540rpx;
  height:100rpx;
  margin:50rpx auto;
  background: rgb(213,86,43);
  color: white;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 6rpx;
}